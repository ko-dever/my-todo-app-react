{
  "name": "my-todo-app",
  "version": "1.0.0",
  "private": true,
  "config": {
    "DIR_BUILD": "./build",
    "DEPLOY_DOMAIN": "demo-react-todo.surge.sh"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-scripts": "2.1.1",
    "styled-components": "^3.4.9"
  },
  "devDependencies": {
    "surge": "^0.20.1"
  },
  "scripts": {
    "start": "react-scripts start",

    "build": "react-scripts build",
    "prebuild": "rm -rf $npm_package_config_DIR_BUILD",
    "postbuild": "npm run deploy",

    "deploy": "npx surge $npm_package_config_DIR_BUILD $npm_package_config_DEPLOY_DOMAIN",
    "undeploy": "npx surge teardown $npm_package_config_DEPLOY_DOMAIN",

    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
